<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/bankbackground"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <LinearLayout
            android:id="@+id/user_name"
            
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Name :"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CustName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:translationX="-68dp"
                android:translationY="20dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:id="@+id/mobile_no"
            android:layout_below="@id/user_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Account Number :"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/AccNum"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:translationX="-153dp"
                android:translationY="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:id="@+id/email_id"
            android:layout_below="@id/mobile_no">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:textColor="#000"
                android:text="Email Id :"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:translationX="-80dp"
                android:translationY="20dp" />

</LinearLayout>


    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:id="@+id/bank_account_no"
        android:layout_below="@id/email_id">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:text="Mobile Number :"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_height="30dp"
            android:translationX="-130dp"
            android:translationY="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/account_no"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15dp"/>

</LinearLayout>




        <LinearLayout
            android:id="@+id/ifsc"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_below="@id/bank_account_no"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="IFSC Code"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ifsc_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:translationX="-90dp"
                android:translationY="20dp"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/current_balance"
            android:layout_width="412dp"
            android:layout_height="55dp"
            android:layout_below="@id/ifsc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Current balance :"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs."
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AccBal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rupeeslash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" /-"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/transfer_button"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_balance"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#673AB7"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Transfer money"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:translationX="120dp" />

    </RelativeLayout>

</ScrollView>